<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".review"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitReviewButton"
        android:layout_marginTop="16dp"
        android:background="#E8E8E8"
        android:padding="16dp"
        android:text="Please input your review for below order"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/bookingInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/submitReviewButton"
        android:layout_marginTop="16dp"
        android:background="#E8E8E8"
        android:padding="16dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/reviewEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="write a review"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:background="#787676"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:boxBackgroundColor="@color/white"/>

    <Button
        android:id="@+id/submitReviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="#000000"
        android:text="Submit your review"
        android:textColor="@color/white" />

    <!-- New TextView for displaying booking information -->


</LinearLayout>
